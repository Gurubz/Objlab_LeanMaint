<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/activity_select_asset_ex_LinearLayoutQr">
            <TextView
                android:text="@string/activity_select_asset_ex_instructionQr"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <SurfaceView
                android:id="@+id/activity_select_asset_ex_SurfaceViewQr"
                android:layout_width="380dp"
                android:layout_height="380dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/activity_select_asset_ex_LinearLayoutText">
            <TextView
                android:text="@string/activity_select_asset_ex_instructionText"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <SurfaceView
                android:id="@+id/activity_select_asset_ex_SurfaceViewText"
                android:layout_width="380dp"
                android:layout_height="380dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageButton
            android:src="@drawable/baseline_qr_code_24"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:contentDescription="@string/activity_select_asset_ex_ButtonQr"
            android:id="@+id/activity_select_asset_ex_ImageButtonQr" />
        <ImageButton
            android:src="@drawable/baseline_article_24"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:contentDescription="@string/activity_select_asset_ex_ButtonText"
            android:id="@+id/activity_select_asset_ex_ImageButtonText" />
        <ImageButton
            android:src="@drawable/baseline_chat_bubble_24"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:contentDescription="@string/activity_select_asset_ex_ButtonVoice"
            android:id="@+id/activity_select_asset_ex_ImageButtonVoice" />
    </LinearLayout>
</LinearLayout>
