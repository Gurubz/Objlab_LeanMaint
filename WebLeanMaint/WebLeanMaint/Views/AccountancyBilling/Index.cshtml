@model IEnumerable<Fiver_Crud.Models.AccountancyBilling>
 

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Accountancy Billing</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h4 class="section-subtitle"><b>Accountancy Billing List</b></h4>
            <a href="@Url.Action("Create", "AccountancyBilling")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-plus"></i>  Creat New</a>
            <div class="panel">
                <div class="panel-content">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped table-success" id="searchable">
                            <thead class="bordered-darkorange">
                                <tr>
                                    <th>ID_Billing</th>
                                    <th>ID_Operator</th>
                                    <th>Activation</th>
                                    <th>End</th>
                                    <th>HourlyCost</th>
                                    <th>Year</th>
                                    <th>Month</th>
                                    <th>StartDay</th>
                                    <th>EndDay</th>
                                    <th>Value</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody class="abc">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        
                                        <td>@item.ID_Billing</td>
                                        <td>@item.ID_Operator</td>
                                        <td>@item.Activation</td>
                                        <td>@item.End</td>
                                        <td>@item.HourlyCost</td>
                                        <td>@item.Year</td>
                                        <td>@item.Month</td>
                                        <td>@item.StartDay</td>
                                        <td>@item.EndDay</td>
                                        <td>@item.Value</td>

                                        <td>
                                            <a href="@Url.Action("Edit", new { ID= item.ID_Billing } )" class="btn btn-warning shiny input-xs"><i class="fa fa-pencil"></i></a>
                                            <a href="@Url.Action("Delete", new { ID= item.ID_Billing } )" new { onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger shiny input-xs"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th><input type="text" style="width: 70px" placeholder="Search Here" name="search_browser" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" style="width:70px" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
